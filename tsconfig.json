{
  "compilerOptions": {
    "lib": [
      "es2020",
      "es6"
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./config/global.d.ts", "./node_modules/@types"]
  },
  "include": [
    "src",
    "config"
  ]
}